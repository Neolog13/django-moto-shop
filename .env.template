# Django secret key (change this in production)
SECRET_KEY=your-django-secret-key

# PostgreSQL database parameters
POSTGRES_NAME=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
# Use 'postgres' if running in Docker, 'localhost' if running locally
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Email settings (Yandex SMTP example)
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=465
EMAIL_USE_SSL=True

# GitHub OAuth credentials
SOCIAL_AUTH_GITHUB_KEY=your_github_oauth_client_id
SOCIAL_AUTH_GITHUB_SECRET=your_github_oauth_client_secret

# Debug mode (set to False in production)
DEBUG=True
